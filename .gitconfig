; include personal user and email by default
[include]
    path = ~/.dotfiles/.gitconfig-personal

[core]
    editor = nvim
    pager = delta

[merge]
    conflictstyle = diff3

[pager]
    blame = delta
    diff = delta
    reflog = delta
    show = delta

[delta]
    dark = true
    line-numbers = true
    side-by-side = true

[alias]
    s = status
    c = commit
    d = diff
    ds = diff --staged
    l = log
    co = checkout
    a = add
    aa = add .
    wl = worktree list
    wr = worktree remove
    rs = restore --staged .
    b = branch -vv
    bd = branch -d
    sl = stash list

; if work config is defined, override the personal
[includeIf "gitdir:~/"]
    path = ~/.dotfiles-work/.gitconfig

; unless in the dotfiles directory
[includeIf "gitdir:~/.dotfiles/"]
    path = ~/.dotfiles/.gitconfig-personal

